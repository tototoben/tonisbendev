{
  "name": "tonisbendev",
  "description": "it me, tototoben",
  "version": "1.0.0",
  "engines": {
    "node": "14.x.x",
    "npm": "7.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tototoben/tonisbendev.git"
  },
  "keywords": [
    "alpinejs",
    "eleventy",
    "netlify",
    "snowpack",
    "tailwindcss"
  ],
  "author": {
    "name": "TÃµnis Bender",
    "email": "to.to.to.ben@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "homepage": "https://tonisben.dev",
  "browserslist": [
    "defaults",
    "maintained node versions",
    "> 5%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css,js,html}": "stylelint --fix",
    "*.{js,html}": "eslint --fix"
  },
  "scripts": {
    "clean": "rimraf src/_site",
    "serve": "serve --no-clipboard --listen 8080 dist",
    "dev": "cross-env NODE_ENV=development run-s clean dev:*",
    "dev:snowpack": "snowpack dev",
    "build": "cross-env NODE_ENV=production run-s clean build:*",
    "build:snowpack": "snowpack build",
    "build:sw": "workbox generateSW",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js,.html src/",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .js,.html src/ --fix",
    "format:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css --fix",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@snowpack/plugin-postcss": "^1.1.0",
    "@snowpack/plugin-run-script": "^2.3.0",
    "@tailwindcss/jit": "^0.1.8",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.4",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.16.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "snowpack": "^3.0.13",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "tailwindcss": "^2.0.3",
    "workbox-cli": "^6.1.1"
  },
  "dependencies": {
    "alpinejs": "^2.8.2"
  }
}
